<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:id="@+id/header_drawer"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <com.dcdineshk.googlemap.utils.CircularImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="10dp"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/userName_mTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing1"
        android:text="User"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/userEmail_mTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dineshk@android.com"
        android:layout_marginLeft="5dp" />

</LinearLayout>
